<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="com.xinlipinggu.dao.Question" table="question" >
	<id name="qId" type="integer" >
		<generator class="native"></generator>
	</id>
	<property name="qindex" type="integer"></property>
	<property name="qTitle" type="string"></property>
 	<many-to-one name="problem" class="com.xinlipinggu.dao.Problem"
		foreign-key="pId" column="pId" ></many-to-one>
</class>
</hibernate-mapping>